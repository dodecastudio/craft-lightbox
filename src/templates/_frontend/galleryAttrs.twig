{% apply spaceless %}

{# Settings #}
{% set settings = settings ?? false %}
{% set galleryRef = galleryRef ? galleryRef|kebab : galleryTitle ? galleryTitle|kebab : "now"|date('isu') %}
{% set galleryTitle = title|default(null) %}

{# Render link to launch lightbox #}
{% set galleryAttrs = {
  id: "#{settings.identifier}-gallery-#{galleryRef}",
  class: "#{settings.cssClassGallery} #{settings.cssClassesGallery}",
  data: {
    ref: "#{galleryRef}",
    title: "#{galleryTitle}",
  }
} %}

{# Output #}
{{attr(galleryAttrs)}}

{% endapply %}